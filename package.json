{
  "name": "ts-iqueda-boilerplate",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "CC0-1.0",
  "scripts": {
    "build": "tslint --project . && tsc",
    "start": "nodemon --watch \"src/**/*\" -e ts --exec \"ts-node -r tsconfig-paths/register\" ./src/index.ts",
    "lint:ts:base": "tslint --project tsconfig.json --config tslint.json",
    "lint:ts": "npm run lint:ts:base \"src/**/*.ts\"",
    "pm2-start": "pm2 start ./dist/index.js --name base_service",
    "pm2-restart": "pm2 restart all"
  },
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "@types/generic-pool": "3.1.9",
    "@types/humps": "1.1.2",
    "@types/joi": "14.3.4",
    "@types/jsonwebtoken": "8.3.5",
    "@types/koa": "2.0.39",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-router": "7.0.23",
    "@types/koa2-cors": "2.0.1",
    "@types/moment": "2.13.0",
    "@types/moment-timezone": "0.5.12",
    "@types/mongodb": "3.3.10",
    "@types/node-fetch": "2.5.3",
    "@types/ramda": "0.26.33",
    "cross-env": "5.0.5",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "nodemon": "1.12.0",
    "pm2": "4.2.1",
    "ts-node": "3.3.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.7.0",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "generic-pool": "3.7.1",
    "humps": "2.0.1",
    "joi": "14.3.1",
    "jsonwebtoken": "8.5.1",
    "koa": "2.3.0",
    "koa-bodyparser": "4.2.1",
    "koa-router": "7.2.1",
    "koa2-cors": "2.0.6",
    "moment": "2.29.2",
    "moment-timezone": "0.5.27",
    "mongodb": "3.3.3",
    "node-fetch": "2.6.0",
    "ramda": "0.26.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:ts:base"
    ]
  }
}
